{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run AlgoTrader",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/run.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Run Dashboard",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": ["run", "dashboard/app.py"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
